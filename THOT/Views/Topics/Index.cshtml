@model IEnumerable<THOT.Models.Topic>

@{
    ViewBag.Title = "Temas";
}

@if (User.IsInRole("Administrator"))
{

<h2>Temas</h2>

<p>
    @Html.ActionLink("Agregar Tema", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Unit.Number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Content)
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Unit.Number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.TopicId }) |
            @Html.ActionLink("Details", "Details", new { id=item.TopicId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TopicId })*@

            <a href="@Url.Action("Edit", new { id=item.TopicId})">
                <i class="glyphicon glyphicon-pencil"></i>
                <span class="sr-only">Edit</span>
            </a>|
            <a href="@Url.Action("Details", new { id=item.TopicId})">
                <i class="glyphicon glyphicon-eye-open"></i>
                <span class="sr-only">Details</span>
            </a>|
           <a href="@Url.Action("Delete", new { id=item.TopicId})">
                <i class="glyphicon glyphicon-trash"></i>
                <span class="sr-only">Delete</span>
            </a>
        </td>
    </tr>
}

</table>
}
else
{
    if (User.IsInRole("Student"))
    {
        <h2>Temas</h2>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Unit.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Number)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Unit.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Number)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a href="@Url.Action("Details", new { id=item.TopicId})">
                            <i class="glyphicon glyphicon-plus-sign"></i>
                            <span class="sr-only">Details</span>
                        </a>
                    </td>
                </tr>
            }

        </table>

    }

}


