@model IEnumerable<THOT.Models.Area>

@{
    ViewBag.Title = "Areas";
}

<h2>Areas</h2>

<p>
    @Html.ActionLink("Agregar Area", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
           @* @Html.ActionLink("Edit", "Edit", new { id=item.AreaId }) |*@
            <a href="@Url.Action("Edit", new { id=item.AreaId})">
                <i class="glyphicon glyphicon-pencil"></i>
                <span class="sr-only">Edit</span>
            </a>|
            @Html.ActionLink("Details", "Details", new { id=item.AreaId }) |
            @*@Html.ActionLink("Delete", "Delete", new { id=item.AreaId })*@
            <a href="@Url.Action("Delete", new { id=item.AreaId})">
                <i class="glyphicon glyphicon-trash"></i>
                <span class="sr-only">Delete</span>
            </a>
        </td>
    </tr>
}

</table>
