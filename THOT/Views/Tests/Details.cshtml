        @foreach(var q in Model.Questions)
        {
            <div class="row">               
                 <div class="col-md-12">@Html.Raw(@q.Description)</div>                   
            </div>

            foreach (var a in q.Answers)
            {
                
                <div class="row">
                    <div class="radio">
                        <label><input type="radio" name="@q.QuestionId">@Html.Raw(HttpUtility.HtmlDecode( a.Description))</label>
                    </div>                    
                </div>
            }
        }
    

</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.TestId }) |
    @Html.ActionLink("Back to List", "Index")
</p>

