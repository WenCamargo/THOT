@model IEnumerable<THOT.Models.Test>

@{
    ViewBag.Title = "Test";
}

@if (User.IsInRole("Administrator"))
{
<h2>Test</h2>

<p>
    @Html.ActionLink("Agregar Test", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TopicId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TopicId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
       
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.TestId }) |
            @Html.ActionLink("Details", "Details", new { id=item.TestId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TestId })*@

            <a href="@Url.Action("TestQuestions", "Questions", new { id = item.TestId })">
                <i class="glyphicon glyphicon-file"></i>
                <span class="sr-only">Details</span>
            </a>|
            <a href="@Url.Action("Edit", new { id = item.TestId })">
                <i class="glyphicon glyphicon-pencil"></i>
                <span class="sr-only">Edit</span>
            </a>|
            <a href="@Url.Action("Details", new { id = item.TestId })">
                <i class="glyphicon glyphicon-eye-open"></i>
                <span class="sr-only">Details</span>
            </a>|
            <a href="@Url.Action("Delete", new { id = item.TestId })">
                <i class="glyphicon glyphicon-trash"></i>
                <span class="sr-only">Delete</span>
            </a>

        </td>
    </tr>
}

</table>

}
else
{
    if (User.IsInRole("Student"))
    {
        <h2>Test</h2>

        <p>
            @Html.ActionLink("Agregar Test", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TopicId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TopicId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>

                    <td>
                        @*@Html.ActionLink("Edit", "Edit", new { id=item.TestId }) |
                            @Html.ActionLink("Details", "Details", new { id=item.TestId }) |
                            @Html.ActionLink("Delete", "Delete", new { id=item.TestId })*@
                        <a href="@Url.Action("Details", new { id = item.TestId })">
                            <i class="glyphicon glyphicon-plus-sign"></i>
                            <span class="sr-only">Details</span>
                        </a>

                    </td>
                </tr>
            }

        </table>
    }
}