@model IEnumerable<THOT.Models.Unit>

@{
    ViewBag.Title = "Unidades";
}

@if (User.IsInRole("Administrator"))
{
    
<h2>Unidades</h2>

<p>
    @Html.ActionLink("Agregar Unidad", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Subject.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Subject.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id = item.UnitId }) |
            @Html.ActionLink("Details", "Details", new { id = item.UnitId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.UnitId })*@
        
            <a href="@Url.Action("UnitsTopics","Topics", new { id= item.UnitId })">
                <i class="glyphicon glyphicon-list-alt"></i>
                <span class="sr-only">Details</span>
            </a>|
            <a href="@Url.Action("Edit", new { id = item.UnitId })">
                <i class="glyphicon glyphicon-pencil"></i>
                <span class="sr-only">Edit</span>
            </a>|
            @*<a href="@Url.Action("UnitsTopics","Topics", new { id= item.UnitId })">
                <i class="glyphicon glyphicon-list-alt"></i>
                <span class="sr-only">Details</span>
            </a>|*@
            <a href="@Url.Action("Delete", new { id = item.UnitId })">
                <i class="glyphicon glyphicon-trash"></i>
                <span class="sr-only">Delete</span>
            </a>          
        </td>
    </tr>
}

</table>
}
else
{
    if (User.IsInRole("Student"))
    {
        <h2>Unidades</h2>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Subject.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Number)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Subject.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Number)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a href="@Url.Action("UnitsTopics","Topics", new { id= item.UnitId })">
                            <i class="glyphicon glyphicon-plus-sign"></i>
                            <span class="sr-only">Details</span>
                        </a>
                    </td>
                </tr>
            }

        </table>

    }

}

