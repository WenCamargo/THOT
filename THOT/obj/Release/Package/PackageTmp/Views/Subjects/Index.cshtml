@model IEnumerable<THOT.Models.Subject>

@{
    ViewBag.Title = "Materias";
}
@if (User.IsInRole("Administrator"))
{
<h2>Materias</h2>

<p>
    @Html.ActionLink("Agregar Materia", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Area.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Area.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>      
            <td>
                <a href="@Url.Action("SubjectsUnits","Units", new { id= item.SubjectId })">
                    <i class="glyphicon glyphicon-book"></i>
                    <span class="sr-only">Details</span>
                </a>|
                <a href="@Url.Action("Edit", new { id = item.SubjectId })">
                    <i class="glyphicon glyphicon-pencil"></i>
                    <span class="sr-only">Edit</span>
                </a>|                
                <a href="@Url.Action("Delete", new { id = item.SubjectId })">
                    <i class="glyphicon glyphicon-trash"></i>
                    <span class="sr-only">Delete</span>
                </a>
            </td>       
    </tr>
}

</table>
}
else
{
    if (User.IsInRole("Student"))
    {
        <h2>Materias</h2>
        <table class="table">
            <tr>
                @*<th>
                    @Html.DisplayNameFor(model => model.Area.Name)
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.Area.Name)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a href="@Url.Action("SubjectsUnits","Units", new { id= item.SubjectId })">
                            <i class="glyphicon glyphicon-plus-sign"></i>
                            <span class="sr-only">Details</span>
                        </a>
                    </td>
                </tr>
            }

        </table>

    }

}
