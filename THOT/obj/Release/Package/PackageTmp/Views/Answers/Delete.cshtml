}

<h2>Eliminar</h2>


<div>
    <h4>Respuesta</h4>
    <h5>¿Estás seguro de eliminar este elemento?</h5>
    <hr />
    <dl class="dl-horizontal">
        @*<dt>
            @Html.DisplayNameFor(model => model.Question.Description)
